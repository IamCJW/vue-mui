/////公共功能列表/////////////
.media-view
  position: relative;
  margin-top: 0;
  margin-bottom: 0;
  padding-left: 0;
  list-style: none;
  background-color: #fff;
  position: relative;
  border-top $border-default
  .media
    overflow: hidden;
    padding: .12rem
    margin 0 -.12rem
    -webkit-touch-callout: none;
    border-bottom $border-default
    .media-content
      .media-lable
        color $text-color-light-xx
      .media-value
        float right
    .icon-more:before
      float right
    .icon-more
      .media-value
        margin-right .12rem
