@import "../../stylus/_mixin.styl"
$cell-padding = .27rem
.mui-content
  position relative
  .indexed-list
    position: absolute
    border-top: $border-default
    border-bottom: $border-default
    overflow: hidden;
    background-color $bg-color-x
    height: 100vh;
    width: 100%;
    cursor: default;
    top: 0;
    z-index: 1;
    .indexed-content
      height 100%
      position relative
      .indexed-list-alert
        position fixed
        bottom  2rem
        left 50%
        margin-left -.2rem
        border-radius 100%
        width .4rem
        height .4rem
        display-flex()
        flex-align-item(center)
        flex-justify-content(center)
        background rgba(0,0,0,.4)
        color #ffffff
        font-size .18rem
        z-index $z-index-popout
      .indexed-list-bar
        width .3rem
        position fixed
        right 0
        bottom .4rem
        font-size .12rem
        line-height .16rem
        z-index $z-index-navigation
        display-flex()
        flex-direction(column)
        flex-align-item(center)
        a
          color #396902
          &:active
            opacity .5
      .indexed-list-inner
        position relative
        height 100%
        overflow-y auto
        .indexed-table-view
          li
            list-style none
          .indexed-list-group
            font-size .12rem
            line-height .3rem
            padding 0 $cell-padding
            color $text-color-light-xx
            .indexed-item
              color #333
              padding 0 $cell-padding
              margin 0 (-($cell-padding))
              font-size .14rem
              line-height .4rem
              &.active
                background-color $main-color
        .indexed-table-view-child
          position fixed
          bottom  0
          right 0
          height 100%
          width 68%
          padding-top $indexed-padding-top
          background-color #fff
          z-index $z-index-content
          .indexed-child-group
            box-sizing border-box
            width 50%
            height 100%
            float left
            border-left $border-default
            overflow-y auto
            .indexed-item
              text-align center
              font-size .14rem
              line-height .4rem
              &.active
                background-color $main-color

