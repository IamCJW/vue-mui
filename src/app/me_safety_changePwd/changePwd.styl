@import "../../stylus/_mixin.styl"
.mui-content
  min-height 100vh
  padding .12rem
  .box
    position relative
    margin-top .12rem
    width 100%
    .input-group
      .input-item
        position relative
        height .44rem
        display-flex()
        flex-justify-content(space-between)
        flex-align-item(center)
        margin 0 auto .12rem
        i
          position relative
          z-index 2
          font-size .2rem
          padding-left .14rem
          color $text-color-light-xx
        .code
          color $fourth-color
          display inline-block
          position relative
          z-index 2
          padding .12rem
          width 1rem
          text-align center
          &:before
            content ''
            position absolute
            top .1rem
            bottom .1rem
            left 0
            width .01rem
            background-color $text-color-light-xxx
            opacity .5
          &.disabled
            color $text-color-light-xxx
        input,button
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          z-index 1
          padding-left .42rem
          border-radius $border-radius-default
          border $border-default
        input:focus
          border-color $main-color
        button
          border none
          background $btn-gradient
          color #ffffff
          padding 0
        &.other
          margin -.1rem auto 0
          height auto
    .tip
      color $text-color-light-xxx
      font-size .12rem
      margin-bottom .12rem
      span
        color $main-color
