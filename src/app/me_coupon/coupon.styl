@import "../../stylus/_mixin.styl"
.detail-nav-bar
  position fixed
  background-color $main-color-x
  min-width 100%
  display-flex()
  flex-justify-content(flex-start)
  overflow-x auto
  z-index $z-index-navigation
  span
    display inline-block
    font-size .16rem
    width 33.3333%
    padding .12rem 0 .08rem
    color rgba(255, 255, 255, .75)
    white-space nowrap
    position relative
    transition color .5s
    letter-spacing: -.005rem;
    text-align center
    &.active
      color #fff
      &::before
        position absolute
        content ''
        top 0.01rem
        left .2rem
        right .2rem
        height .04rem
        background-color $third-color
        border-radius .04rem
.content-wrapper
  position absolute
  top 0
  width 100%
  height 100vh
  padding-top .42rem
  overflow hidden
  z-index $z-index-content
  .content-full-scroll
    width 300vw
    height 100%
    position relative
    overflow hidden
    left 0
    transition .3s left
    .content-page
      position relative
      float left
      width 100vw
      height 100%
      overflow hidden
      overflow-y auto
.coupon-group
  padding $cell-left-right-space
.coupon-item
  box-shadow $box-shadow-default
  border-radius 0 $border-radius-xx $border-radius-default-xx 0
  overflow auto
  height .9rem
  margin-bottom .1rem
  .coupon-left
    background url(../../assets/coupon-bg.png) top left $main-color
    background-size auto 100%
    float left
    width 36%
    height 100%
    color #ffffff
    line-height 1
    display-flex()
    flex-direction(column)
    flex-align-item(center)
    flex-justify-content(center)
    text-align center
    .coupon-value
      font-size .2rem
      margin-bottom .1rem
      span
        font-size .3rem
    .coupon-condition
      font-size .12rem
  .coupon-right
    $cell-padding = .1rem
    height 100%
    float left
    width 64%
    display-flex()
    flex-direction(column)
    flex-justify-content(space-between)
    .coupon-top
      display-flex()
      flex-align-item(center)
      font-size .14rem
      padding $cell-padding $cell-padding 0
      .coupon-type
        display inline-block
        background-color $main-color
        border-radius $border-radius-x
        font-size .12rem
        color #fff
        line-height 1
        padding .03rem .04rem
        margin-right .05rem
      .coupon-name
        width 1.5rem
    .coupon-mid
      font-size .12rem
      color $text-color-light-xx
      display-flex()
      flex-justify-content(space-between)
      flex-align-item(center)
      padding 0 $cell-padding
      .coupon-use
        border .01rem solid $main-color-xx
        border-radius $border-radius-x
        color $main-color
        line-height 1
        padding .04rem .02rem
        font-size .14rem
    .coupon-bottom
      padding 0 $cell-padding
      border-top $border-default
      font-size .12rem
      color $text-color-light-xx
.coupon-group.used
  .coupon-item
    .coupon-left
      background-image url(../../assets/coupon-bg-end.png)
      background-color #9f9f9f
    .coupon-right
      .coupon-top
        .coupon-type
          background #9f9f9f
.end
  opacity .5

