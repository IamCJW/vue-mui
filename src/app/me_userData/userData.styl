@import "../../stylus/_mixin.styl"
.media-view
  border-bottom .1rem solid $bg-color-x
  .media
    .media-content
      position relative
      .media-lable
        width 1rem
      .media-value
        float none
        input
          border none
        .user-head
          position absolute
          float right
          display inline-block
          width .37rem
          height .37rem
          overflow hidden
          border-radius 100%
          top .04rem
          right .34rem
          background-color $main-color
          img
            max-width 100%
