@import "../../stylus/_mixin.styl"
.mui-content
  height 100vh
  overflow hidden
.content-page
  position relative
  width 100vw
  height 100%
  overflow-y auto
  .scroll-wrapper
    height 100%
    position relative
    overflow hidden
.pro-group
  padding-top .12rem
  .pro-item
    $cell-padding=.12rem
    width 100%
    border-radius .06rem
    box-shadow $box-shadow-default
    border $border-default
    margin-bottom $cell-padding
    padding .09rem $cell-padding
    display-flex()
    flex-align-items(center)
    .pro-assist
      display-flex()
      flex-direction(column)
      flex-align-item(flex-start)
      flex-justify-content(center)
      border-right $border-default
      padding-right $cell-padding
      div
        position relative
        height .3rem
        line-height .3rem
        font-size .12rem
        white-space nowrap
        display-flex()
        flex-align-item(baseline)
        flex-justify-content(center)
        text-align center
        &:after
          content ''
          left 0
          right 0
          top .3rem
          height .01rem
          position absolute
          background $border-color-default
        .iconfont
          font-size .14rem
          margin-right .05rem
    .pro-main
      padding-left $cell-padding
      display-flex()
      flex-align-item(center)


