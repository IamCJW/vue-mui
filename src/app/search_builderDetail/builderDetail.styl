@import "../../stylus/_mixin.styl"
.header-nav
  box-shadow none
  height auto
.hide-module
  width: 100%;
  position: relative;
  z-index: 99;
  top: .1rem;
  padding: 0 .1rem;
.modoule-top
  position relative
  display-flex()
  flex-align-item(baseline)
  flex-justify-content(space-between)
  .user-head
    position relative
    z-index 2
    border-radius $border-radius-x
    overflow hidden
    .iconfont
      font-size .7rem
      line-height .7rem
      background-color #fff
      color $text-color-light-xx
      box-shadow $box-shadow-default
      display-inline-flex()
  .user-sign
    position relative
    display inline-block
    background-color $main-color-x
    color #fff
    padding 0 .06rem
    border-radius $border-radius-xx
    z-index 2
  .user-share,.user-focus
    position relative
    display inline-block
    background-color $third-color
    color #fff
    width .45rem
    text-align center
    border-radius $border-radius-xx
    z-index 2
.header-nav~.mui-content
  height 100vh
  position relative
  padding-top .88rem
  .scroll-wrapper
    height 100%
    position relative
.bg-gary
  background-color #ddd!important
.base-msg
  margin-top .12rem
  width 100%
  border-radius .06rem
  box-shadow $box-shadow-default
  border $border-default
  padding .07rem
  margin-bottom .12rem
  color $text-color-light-xx
  .module2
    padding .1rem 0
    border-bottom $border-default
    .listTitle
      margin-bottom .07rem
  .module3
    padding .1rem 0
    margin-bottom -.1rem
    overflow auto
    span
      font-size .12rem
      float left
      width .66rem
      display-inline-flex()
      flex-align-item(center)
      .iconfont.z
        color $third-color-x
      .iconfont.b
        color $fourth-color
.pro-item
  width 100%
  border-radius .06rem
  box-shadow $box-shadow-default
  border $border-default
  padding 0 0 .07rem
  margin-bottom .12rem
  .pro-time
    display-flex()
    flex-align-item(center)
    color $text-color-light-xx
    font-size .12rem
    padding .07rem .1rem 0 .1rem
    .iconfont
      font-size .14rem
  .pro-content
    display-flex()
    flex-align-item(center)
    flex-justify-content(space-between)
    height .75rem
    .pro-main
      flex-flex(1)
      border-right $border-default
      overflow hidden
      .pro-name
        margin .08rem 0
        padding 0 .1rem
      .pro-main-sign
        padding 0 .1rem
        .pro-style
          display inline-block
          overflow hidden
          .iconfont
            font-size .16rem
        .pro-company
          color $text-color-light-x
          font-size .12rem
          margin-left .07rem
          display inline-block
          overflow hidden
          white-space nowrap
          text-overflow ellipsis
    .pro-assist
      display-flex()
      flex-direction(column)
      flex-align-item(center)
      flex-justify-content(center)
      flex-flex(0,1.12rem)
      font-size .12rem
      padding 0 .05rem
      text-align center
      height 100%
      color $text-color-light-x
      div
        line-height 1.2
        height 49%
        width 100%
        display-flex()
        flex-align-item(center)
        flex-justify-content(center)
      div:last-child
        border-top $border-default
      .pro-price
        span
          color $assist-color
