@import "../../stylus/_mixin.styl"
.home-header
  padding .09rem .17rem  0 .17rem
  background-color #04a3ee
  position: relative
  z-index $z-index-navigation
  .home-search-wrapper
    width 100%
    height .36rem
    background-color #fff
    border-radius .06rem
    overflow hidden
    padding 0 .09rem
    display-flex()
    flex-align-item(center)
    .home-location
      padding-right .03rem
      display-flex()
      flex-align-item(center)
      span
        margin 0 .03rem
    .home-search
      height .24rem
      border-left .01rem solid $border-color-default
      display-flex()
      flex-flex(1)
      flex-align-item(center)
      flex-justify-content(space-between)
      div
        flex-flex(1)
        text-align center
        font-size .12rem
        color $text-color-light-xx
      .iconfont
        font-size .2rem
  .home-bar-nav
    display-flex()
    flex-align-item(center)
    flex-justify-content(space-around)
    height .52rem
    .home-bar-item
      background none
      border none
      color #fff
      font-size .16rem
      &:active
        color rgba(255,255,255,.4)
.content-wrapper
  position absolute
  top 0
  width 100%
  height 100vh
  padding-top .97rem
  overflow hidden
  z-index $z-index-content
  .content-full-scroll
    width 400vw
    height 100%
    position relative
    overflow hidden
    left 0
    transition 500ms left
    .content-page
      position relative
      float left
      width 100vw
      height 100%
      padding 0 .12rem
      overflow hidden
      .filter-wrapper
        overflow hidden
        .filter
          height .48rem
          float right
          display-flex()
          flex-align-item(center)
      .pro-item
        width 100%
        border-radius .06rem
        box-shadow $box-shadow-default
        border $border-default
        padding 0 0 .07rem
        margin-bottom .12rem
        .pro-time
          display-flex()
          flex-align-item(center)
          color $text-color-light-xx
          font-size .12rem
          padding .07rem .1rem 0 .1rem
          .iconfont
            font-size .14rem
        .pro-content
          display-flex()
          flex-align-item(center)
          flex-justify-content(space-between)
          height .75rem
          .pro-main
            flex-flex(1)
            border-right $border-default
            .pro-name
              display-flex()
              flex-align-item(center)
              height .5rem
              padding 0 .1rem
            .pro-main-sign
              padding 0 .1rem
              .pro-style
                color #0e972f
                .iconfont
                  font-size .16rem
              .pro-location
                color $text-color-light-x
                font-size .12rem
                margin-left .07rem
          .pro-assist
            display-flex()
            flex-direction(column)
            flex-align-item(center)
            flex-justify-content(center)
            flex-flex(0,1.12rem)
            font-size .12rem
            padding 0 .05rem
            text-align center
            height 100%
            color $text-color-light-x
            div
              height 49%
              width 100%
              display-flex()
              flex-align-item(center)
              flex-justify-content(center)
            div:last-child
              border-top $border-default
            .pro-price
              span
                color $assist-color
      .mui-scroll.cell-row.more
        .pro-time
          flex-justify-content(flex-end)
          padding .07rem .15rem 0
        .pro-assist
          flex-justify-content(flex-start)
          flex-flex(0 .8rem)
          padding 0 .15rem
          font-size .14rem
          .pro-style
            flex-align-item(baseline)
            flex-justify-content(flex-start)
            border none
            color #0e972f
            .iconfont
              font-size .16rem
        .pro-main
          border-right none
          .pro-name
            flex-align-item(flex-start)
            padding 0 .15rem 0 0
          .pro-main-sign
            padding 0 .15rem 0 0
            .pro-location
              margin-left 0



