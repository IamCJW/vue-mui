@import "../../stylus/_mixin.styl"
html
  background-color #fcfcfc
.mui-content
  padding .12rem
  .header-login
    width 100%
    position absolute
    top 0
    height .44rem
    overflow hidden
    left 0
    display-flex()
    .iconfont
      font-size .24rem
      padding .12rem
      color $main-color
  .box
    position relative
    margin-top .5rem
    width 100%
    background #fff
    box-shadow $box-shadow-default
    border-radius $border-radius-default
    padding-bottom .05rem
    .nav-tab
      display-flex()
      flex-align-item(center)
      flex-justify-content(center)
      font-size .16rem
      padding .3rem
      .nav-item
        position relative
        line-height .3rem
        margin 0 .3rem
        &.active:after
          content ''
          position absolute
          bottom 0
          left .1rem
          right .1rem
          height .03rem
          border-radius .03rem
          background-color $third-color
    .input-group
      .input-item
        position relative
        width 2.9rem
        height .5rem
        display-flex()
        flex-justify-content(space-between)
        flex-align-item(center)
        margin 0 auto .25rem
        i
          position relative
          z-index 2
          font-size .2rem
          padding-left .14rem
          color $text-color-light-xx
        .code
          color $fourth-color
          display inline-block
          position relative
          z-index 2
          padding .12rem
          width 1rem
          text-align center
          &:before
            content ''
            position absolute
            top .1rem
            bottom .1rem
            left 0
            width .01rem
            background-color $text-color-light-xxx
            opacity .5
          &.disabled
            color $text-color-light-xxx
        input,button
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          z-index 1
          padding-left .42rem
          border-radius .25rem
          border $border-default
        input:focus
          border-color $main-color
        button
          border none
          background $btn-gradient-x
          color #ffffff
          padding 0
        &.other
          margin -.1rem auto 0
          height auto
    .tip
      text-align center
      color $text-color-light-xxx
      font-size .12rem
      padding-bottom .15rem
