@import "../../stylus/_mixin.styl"
.mui-content
  background-color $bg-color-x
  height 100vh
  .content-wrapper
    height 100%
    position relative
    .mui-wrapper
      height 100%
    .media-view
      padding $cell-left-right-space
      .media.media-more
        background-color #ffffff
        margin-bottom .1rem
        box-shadow $box-shadow-default
        border-radius $border-radius-default
        .media-content
          padding .07rem .12rem
          display-flex()
          flex-align-item(center)
          flex-justify-content(space-between)
          background-color $main-color-x
          .media-del
            display-flex()
            flex-align-item(center)
            i
              color rgba(255,255,255,.8)
              font-size .2rem
              margin-right .05rem
        .media-alert
          margin 0
          .media-content
            background-color #ffffff
          .media-view
            padding 0
          .media
            padding .04rem 0
            border-bottom .1rem solid $bg-color-x
            border-radius 0
            box-shadow none
            &:last-child
              margin-bottom 0
            .media-content
              display block
              .qualify-group
                .qualify-title
                  margin-bottom .05rem
                .qualify-item
                  font-size .12rem
                  color $text-color-light-xx

